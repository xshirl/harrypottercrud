<% include ../../partials/boilerplate %>

<div class="form-page">
<div class="add">

<form action="/students/<%=student.id%>?_method=PUT" method="POST">
  <input type="text" name="fname" placeholder="<%=student.fname%>" /><br>
  <input type="text" name="lname" placeholder="<%=student.lname%>" /><br>
  <input type="text" name="image" placeholder="<%=student.image%>" /><br>
  <select name="house_id">
    <% houses.forEach((house) => { %>
      <option value="<%=house.id%>"><%=house.name%></option>
    <% }) %>
  </select> <br>
  <input type="submit" value="Edit Student" />
</form>
</div>
<a href="/students"> Back to Students </a>
</div>

<% include ../../partials/end %>
